{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es2015",
    "jsx": "react",
    "target": "es2015",
    "allowJs": true,
    "baseUrl": "./common/",
    "paths": {
      "shared*": ["../shared*"],
      "types*": ["../shared/types*"],
      "test-utils": ["../jest_config/test-utils"],
      "@fixtures": ["../jest_config/__fixtures__"],
      "@components": ["v2/components"],
      "@config": ["v2/config"],
      "@containers": ["v2/containers"],
      "@database": ["v2/database"],
      "@features": ["v2/features"],
      "@routing": ["v2/routing"],
      "@services": ["v2/services"],
      "@theme": ["v2/theme"],
      "@translations": ["v2/translations"],
      "@types": ["v2/types"],
      "@utils": ["v2/utils"],
      "@vendor": ["v2/vendor"],
      "@workers": ["v2/workers"],
    },
    "lib": ["esnext", "dom"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "noErrorTruncation": true,
    "noImplicitAny": true,
    "skipLibCheck": true
  },
  "include": ["./scripts", "./common/", "./electron-app/", "./shared/", "spec", "./jest_config"],
  "exclude": ["jest_config/__mocks__", "./node-scripts"],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}
