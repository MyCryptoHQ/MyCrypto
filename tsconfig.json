{
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strictNullChecks": true,
    "module": "es2015",
    "jsx": "react",
    "target": "es2015",
    "allowJs": true,
    "baseUrl": "./common/",
    "lib": [
      "es2017",
      "dom"
    ],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": true
  },
  "include": [
    "./common/",
    "spec",
    "./node_modules/types-rlp/index.d.ts"
  ],
  "awesomeTypescriptLoaderOptions": {
    "transpileOnly": true
  }
}